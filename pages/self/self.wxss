/* pages/self/self.wxss */
page{
  height:100%;
}
.jcs_box{

  width:750rpx;
  height:100%;
  

background-color: white;
  background-size: cover;
  background-position: center;
 
}


.self_container
{ 
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 0;
}

.self_info{
  width:600rpx;
  height:900rpx;
  border-radius: 4rpx;
  background: url(https://i.loli.net/2020/06/20/otjHfylidBbFWIm.jpg); 
  background-size: cover;
  background-position: center;
  box-shadow:  -20rpx 20rpx 15rpx #ccc;
  position: absolute;
  display: flex;
  z-index: 999;
  color:rgb(240, 240, 240);
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.self_img image{
  width:233rpx;
  height:233rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
}
.cover-info {
  bottom: 200px;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.2);
  width: 100%;
}
.self_name{
  align-self: center;
  margin: 10rpx 0rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: gray;
}
.self_job{
  color: grey;
  font-size: 28rpx;
}
.self_desc{
  margin: 20rpx 40rpx;
  font-size:32rpx;
  letter-spacing: 2rpx;
  /* text-indent: 64rpx; */
  color: grey;
}
.self_icon{
  width:300rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content:space-around;

}
.self_icon image{
  border: 1px solid white;
  background-color: white;
  width:80rpx;
  height:80rpx;
  opacity: 0.8;
  border-radius: 50%;

}


